<%= form_with model: post, id: dom_id(post), html: { class: 'my-4' } do |form| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.text_field :username, placeholder: 'Enter your name', class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.text_area :body, placeholder: 'Enter your message', class: 'form-control', rows: 3 %>
  </div>

  <div class="actions">
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>
